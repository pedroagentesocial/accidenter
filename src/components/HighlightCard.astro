---
const { title, text, imageSrc = "/images/placeholder.jpg", imageAlt = title } = Astro.props as { title: string; text: string; imageSrc?: string; imageAlt?: string };
---
<div class="rounded-xl bg-white border border-brand-accent overflow-hidden shadow-sm">
  <img src={imageSrc} alt={imageAlt} class="w-full h-40 sm:h-48 object-cover" loading="lazy" />
  <div class="p-4 sm:p-5">
    <h3 class="text-base sm:text-lg font-heading text-brand-dark">{title}</h3>
    <p class="mt-3 text-sm sm:text-base text-brand-dark">{text}</p>
  </div>
</div>
