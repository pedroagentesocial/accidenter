---
import { t } from "../i18n";
const { locale } = Astro.props as { locale: "en" | "es" };
const year = new Date().getFullYear();
const servicesHref = locale === "en" ? "/en/services" : "/es/servicios";
const aboutHref = locale === "en" ? "/en/about" : "/es/about";
const faqHref = locale === "en" ? "/en/faq" : "/es/faq";
const homeHref = locale === "en" ? "/en" : "/es";
---
<footer class="footer relative z-50 bg-brand-dark text-white">
  <div class="w-full px-4 sm:px-6 lg:px-8 py-10">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 text-white">
      <div class="flex flex-col items-center text-center">
        <a href={locale === "en" ? "/en" : "/es"} class="flex items-center justify-center gap-3">
          <img src="/images/logo.png" alt="Accident ER – Urgent Care MD logo" class="h-32 w-32 rounded logo-light" loading="lazy" />
        </a>
        <p class="mt-3">{t(locale, "ui.footer.blurb") ?? (locale === "en" ? "Professional urgent care after accidents with bilingual support." : "Atención urgente profesional por accidentes con apoyo bilingüe.")}</p>
      </div>
      <div class="flex flex-col items-end text-right">
        <h3 class="w-full text-center font-heading text-white">{t(locale, "ui.nav.accidenter") ?? "AccidentER"}</h3>
        <ul class="mt-3 space-y-2 w-full text-center">
          <li><a href={servicesHref} class="no-underline hover:underline">{t(locale, "ui.nav.services") ?? (locale === "en" ? "Services" : "Servicios")}</a></li>
          <li><a href={faqHref} class="no-underline hover:underline">{t(locale, "ui.nav.faq") ?? "FAQ"}</a></li>
          <li><a href={aboutHref} class="no-underline hover:underline">{t(locale, "ui.nav.about") ?? (locale === "en" ? "About Us" : "Sobre nosotros")}</a></li>
        </ul>
      </div>
      <div class="flex flex-col items-end text-right">
        <h3 class="w-full text-center font-heading text-white">{t(locale, "ui.footer.legalTitle") ?? (locale === "en" ? "Legal" : "Legal")}</h3>
        <ul class="mt-3 space-y-2 w-full text-center">
          <li><a href="#" class="no-underline hover:underline">{t(locale, "ui.footer.privacy") ?? (locale === "en" ? "Privacy Policy" : "Política de privacidad")}</a></li>
          <li><a href="#" class="no-underline hover:underline">{t(locale, "ui.footer.terms") ?? (locale === "en" ? "Terms of Service" : "Términos del servicio")}</a></li>
        </ul>
      </div>
      <div class="flex flex-col items-end text-right">
        <h3 class="w-full text-center font-heading text-white">{t(locale, "ui.footer.contactTitle") ?? (locale === "en" ? "Contact" : "Contacto")}</h3>
        <ul class="mt-3 space-y-2 w-full text-center">
          <li><span class="text-white">{t(locale, "ui.footer.phoneLabel") ?? (locale === "en" ? "Phone" : "Teléfono")}:</span> <a class="no-underline hover:underline" href="tel:+18019967427">+1 801-996-7427</a></li>
          <li><span class="text-white">{t(locale, "ui.footer.addressLabel") ?? (locale === "en" ? "Address" : "Dirección")}:</span> <span>6770 S 900 E, Midvale, UT 84047, EE. UU.</span></li>
          <li><span class="text-white">{t(locale, "ui.footer.emailLabel") ?? (locale === "en" ? "Email" : "Correo")}:</span> <a class="no-underline hover:underline" href="mailto:orders@accidenter.com">orders@accidenter.com</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="w-full border-t border-brand-accent"></div>
  <div class="w-full px-4 sm:px-6 lg:px-8 pt-6 pb-10 text-sm text-white text-center">
    <span class="inline-block">© {year} Accident ER – Urgent Care MD. {t(locale, "ui.footer.rights") ?? (locale === "en" ? "All rights reserved." : "Todos los derechos reservados.")}</span>
  </div>
</footer>
