---
const { step, title, text } = Astro.props as { step: number; title: string; text: string };
---
<div class="rounded-2xl bg-white border border-brand-accent/60 p-6 shadow-sm hover:shadow-md transition h-full flex flex-col items-center text-center">
  <div class="h-1 w-full bg-gradient-to-r from-brand-primary to-brand-accent rounded-md mb-4"></div>
  <div class="flex items-center justify-center gap-3">
    <span class="inline-flex h-10 w-10 items-center justify-center rounded-full bg-brand-primary text-white font-heading ring-4 ring-brand-primary/15">{step}</span>
  </div>
  <h3 class="mt-3 text-lg font-heading text-brand-dark">{title}</h3>
  <div class="mt-2 flex flex-wrap justify-center gap-2">
    <span class="inline-flex items-center rounded-full bg-brand-accent text-white px-3 py-1 text-xs">AccidentERÂ®</span>
    <span class="inline-flex items-center rounded-full bg-brand-accent/90 text-white px-3 py-1 text-xs">Clinic Process</span>
  </div>
  <p class="mt-2 text-sm text-brand-dark">{text}</p>
</div>
