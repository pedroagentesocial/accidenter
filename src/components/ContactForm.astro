---
import { t } from "../i18n";
const { locale } = Astro.props as { locale: "en" | "es" };
---
<div class="relative rounded-2xl overflow-hidden shadow-md">
  <img src="/images/form.jpg" alt={locale === "en" ? "Healthcare staff" : "Personal de salud"} class="w-full h-[640px] object-cover" loading="lazy" />
  <div class="absolute inset-0 bg-black/35"></div>
  <div class="absolute inset-0 flex">
    <div class="w-full max-w-xl p-8">
      <p class="text-white/80 text-sm">- {locale === "en" ? "Work safe, be safe" : "Trabaje seguro, esté seguro"}</p>
      <h3 class="text-white font-heading text-4xl">{locale === "en" ? "AccidentER® — Get help after an accident" : "AccidentER® — Reciba ayuda tras un accidente"}</h3>
      <p class="mt-3 text-white/90 text-sm">{locale === "en" ? "Bilingual team, on‑site diagnostics, and clear next steps." : "Equipo bilingüe, diagnósticos en sitio y pasos claros."}</p>
      <form class="mt-4 grid grid-cols-1 gap-3">
        <input id="input-name" type="text" name="name" class="w-full rounded-md bg-white px-4 py-3 text-brand-dark placeholder-brand-dark/60 shadow focus:outline-none focus:ring-2 focus:ring-brand-primary" placeholder={locale === "en" ? "Enter Your Name" : "Ingresa tu nombre"} />
        <input id="input-phone" type="tel" name="phone" class="w-full rounded-md bg-white px-4 py-3 text-brand-dark placeholder-brand-dark/60 shadow focus:outline-none focus:ring-2 focus:ring-brand-primary" placeholder={locale === "en" ? "Enter Your Phone" : "Ingresa tu teléfono"} />
        <input id="input-email" type="email" name="email" class="w-full rounded-md bg-white px-4 py-3 text-brand-dark placeholder-brand-dark/60 shadow focus:outline-none focus:ring-2 focus:ring-brand-primary" placeholder={locale === "en" ? "Enter Your Email" : "Ingresa tu correo"} />
        <textarea id="input-message" name="message" rows="3" class="w-full rounded-md bg-white px-4 py-3 text-brand-dark placeholder-brand-dark/60 shadow focus:outline-none focus:ring-2 focus:ring-brand-primary" placeholder={locale === "en" ? "Your message (optional)" : "Tu mensaje (opcional)"}></textarea>
        <div class="inline-flex items-start gap-2">
          <input type="checkbox" name="optin" class="mt-1 h-4 w-4 rounded border border-brand-accent bg-white" />
          <span class="text-xs text-white">{t(locale, "ui.contactForm.optInLabel")}</span>
        </div>
        <button type="submit" class="button-success justify-center w-full">{locale === "en" ? "Send" : "Enviar"}</button>
      </form>
    </div>
    <div class="absolute right-6 top-1/2 -translate-y-1/2 flex flex-col gap-3">
      <a href="#" class="inline-flex items-center justify-center h-9 w-9 rounded-full bg-brand-success text-white" aria-label="Twitter">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor"><path d="M22.46 6c-.77.35-1.6.58-2.47.69a4.3 4.3 0 001.88-2.37 8.64 8.64 0 01-2.72 1.04 4.29 4.29 0 00-7.31 3.91A12.17 12.17 0 013 5.16a4.28 4.28 0 001.33 5.72c-.64-.02-1.24-.2-1.76-.49v.05a4.29 4.29 0 003.44 4.2c-.31.09-.64.13-.98.13-.24 0-.47-.02-.69-.06a4.29 4.29 0 004 2.97A8.61 8.61 0 012 19.54a12.15 12.15 0 006.58 1.93c7.9 0 12.22-6.54 12.22-12.22l-.01-.56A8.7 8.7 0 0024 5.5a8.5 8.5 0 01-2.54.7z"/></svg>
      </a>
      <a href="#" class="inline-flex items-center justify-center h-9 w-9 rounded-full bg-brand-success text-white" aria-label="Facebook">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor"><path d="M22 12a10 10 0 10-11.5 9.9v-7h-2v-2.9h2v-2.2c0-2 1.2-3.1 3-3.1.9 0 1.8.16 1.8.16v2h-1c-1 0-1.3.62-1.3 1.25v1.9h2.3l-.37 2.9h-1.93v7A10 10 0 0022 12z"/></svg>
      </a>
      <a href="#" class="inline-flex items-center justify-center h-9 w-9 rounded-full bg-brand-success text-white" aria-label="LinkedIn">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 24 24" fill="currentColor"><path d="M4.98 3.5A2.5 2.5 0 107.48 6a2.5 2.5 0 00-2.5-2.5zM3 8.98h4v12H3v-12zM9 8.98h3.82v1.64h.05c.53-.98 1.83-2.02 3.77-2.02 4.04 0 4.79 2.66 4.79 6.12v6.26h-4v-5.55c0-1.32-.03-3.01-1.84-3.01-1.84 0-2.12 1.44-2.12 2.92v5.64H9v-12z"/></svg>
      </a>
    </div>
  </div>
</div>
