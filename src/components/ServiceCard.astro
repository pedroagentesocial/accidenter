---
const { name, shortDescription, href, imageSrc } = Astro.props as {
  name: string;
  shortDescription: string;
  href: string;
  imageSrc?: string;
};
---
{imageSrc ? (
  <a href={href} class="block rounded-xl overflow-hidden shadow-sm hover:shadow-md transition">
    <div class="relative h-44 sm:h-52 lg:h-56">
      <img src={imageSrc} alt={name} class="absolute inset-0 w-full h-full object-cover" loading="lazy" />
      <div class="absolute inset-0 bg-black/35"></div>
      <div class="absolute inset-0 p-4 sm:p-5 flex flex-col justify-end">
        <h3 class="text-base sm:text-lg font-heading text-white">{name}</h3>
        <p class="mt-2 text-sm sm:text-base text-white/90">{shortDescription}</p>
      </div>
    </div>
  </a>
) : (
  <a href={href} class="block rounded-lg border border-brand-accent bg-white p-4 sm:p-5 shadow-sm hover:shadow-md transition">
    <h3 class="text-base sm:text-lg font-heading text-brand-dark">{name}</h3>
    <p class="mt-2 text-sm sm:text-base text-brand-dark">{shortDescription}</p>
  </a>
)}
